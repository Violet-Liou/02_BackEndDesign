@model IEnumerable<MyModel_CodeFirst.Models.ReBook>
@{
	Layout = null;
}
@* //4.3.3 將Delete View重新排版並加入刪除回覆留言的按鈕 *@
@if (Model.Count() != 0)
{
	<div class="ps-5 ms-5 my-3 pe-4 border border-1 rounded">
		@foreach (var item in Model)
		{
			<div class="text-truncate">@Html.DisplayFor(modelItem => item.Description)</div>
																															//4.4.2 將VCRebooks/Delete View的刪除鈕製作以Ajax方式刪除以保留頁面不整頁更新
			<div class="text-end">@Html.DisplayFor(modelItem => item.Author) | @Html.DisplayFor(modelItem => item.CreatedDate) | <button class="btn btn-outline-danger btn-sm" onclick="delReBook('@item.ReBookID','@item.BookID')">刪除</button></div>
			<hr />
		}
	</div>
}

