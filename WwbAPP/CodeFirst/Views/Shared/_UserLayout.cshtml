<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CodeFirst</title>


    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CodeFirst.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-2 bg-success">
                <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                    <a asp-action="index" asp-controller="Home" class="btn ">首頁</a>
                    <a asp-action="index" asp-controller="PostBooks" class="btn btn-primary">留言板</a>
                    <a class="btn btn-primary">......</a>
                    <a class="btn btn-primary">Button</a>
                </div>
            </nav>
            <section class="col-10">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </section>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CodeFirst - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
