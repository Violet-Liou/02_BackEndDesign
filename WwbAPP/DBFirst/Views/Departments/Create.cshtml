@model DBFirst.Models.Department

@{
    ViewData["Title"] = "新增科系資料";
}

<h1 class="bg-info">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeptID" class="control-label"></label>
                <input asp-for="DeptID" class="form-control" />
                <span asp-validation-for="DeptID" class="text-danger"></span>
                <span class="text-danger">@ViewData["ErrorMessage"]</span>
            </div>
            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認新增" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到科系列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
